using System;
// שאלה 1 סעיפים א-ג

public delegate double BinaryOperation(double x, double y);

public static class MathOperations
{
    public static double Add(double x, double y)
    {
        return x + y;
    }

    public static double Subtract(double x, double y)
    {
        return x - y;
    }

    public static double Multiply(double x, double y)
    {
        return x * y;
    }
}

public class Program
{
    public static double ApplyOperation(BinaryOperation bOp, double a, double b)
    {
        return bOp(a, b);
    }

    public static void Main()
    {
        double a = 5;
        double b = 3;

        double sum = ApplyOperation(MathOperations.Add, a, b);
        double diff = ApplyOperation(MathOperations.Subtract, a, b);
        double prod = ApplyOperation(MathOperations.Multiply, a, b);

        Console.WriteLine($"Add: {sum}");
        Console.WriteLine($"Subtract: {diff}");
        Console.WriteLine($"Multiply: {prod}");
    }
}
