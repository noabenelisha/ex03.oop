using System;

// הגדרת delegate שמייצג פעולה בין שני int
public delegate int BinaryIntOperation(int x, int y);

public class OperationTable
{
    private int startRow, endRow;
    private int startCol, endCol;
    private BinaryIntOperation op;

    // Constructor מקבל טווח שורות, טווח עמודות ופעולה
    public OperationTable(int startRow, int endRow, int startCol, int endCol, BinaryIntOperation op)
    {
        this.startRow = startRow;
        this.endRow = endRow;
        this.startCol = startCol;
        this.endCol = endCol;
        this.op = op;
    }

    // פונקציה שמדפיסה את "לוח הפעולה"
    public void Print()
    {
        // כותרת עמודות
        Console.Write("\t");
        for (int col = startCol; col <= endCol; col++)
        {
            Console.Write(col + "\t");
        }
        Console.WriteLine();

        for (int row = startRow; row <= endRow; row++)
        {
            // כותרת שורה
            Console.Write(row + "\t");
            for (int col = startCol; col <= endCol; col++)
            {
                Console.Write(op(row, col) + "\t");
            }
            Console.WriteLine();
        }
    }
}

// דוגמת שימוש
public class Program
{
    public static void Main()
    {
        // לוח כפל 1-10
        OperationTable multiplicationTable = new OperationTable(
            1, 10, 1, 10,
            (x, y) => x * y
        );

        Console.WriteLine("Multiplication Table:");
        multiplicationTable.Print();

        // לוח חיבור 1-5
        OperationTable additionTable = new OperationTable(
            1, 5, 1, 5,
            (x, y) => x + y
        );

        Console.WriteLine("\nAddition Table:");
        additionTable.Print();
    }
}
